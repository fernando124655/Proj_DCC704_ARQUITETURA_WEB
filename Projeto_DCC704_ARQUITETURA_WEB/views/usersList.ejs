        header { display: flex; justify-content: space-between; align-items: center; border-bottom: 2px solid #ccc; padding-bottom: 10px; margin-bottom: 20px; }
        .logout-link { text-decoration: none; color: #dc3545; font-weight: bold; padding: 8px 15px; border: 1px solid #dc3545; border-radius: 4px; transition: background-color 0.3s; }
